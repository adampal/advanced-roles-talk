<% payment ||= @payment %>
<% team ||= @team || payment&.team %>
<%= render 'account/teams/breadcrumbs', team: team %>
<%= render 'account/shared/breadcrumb', label: t('.label'), url: [:account, team, :payments] %>
<% if payment&.persisted? %>
  <%= render 'account/shared/breadcrumb', label: payment.label_string, url: [:account, payment] %>
<% end %>
<%= render 'account/shared/breadcrumbs/actions', only_for: 'payments' %>
